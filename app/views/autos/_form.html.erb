<style type="text/css">
  input, select,a{
    background:#fff;
    border:1px solid #2E9AFE;
    padding:5px;
  }

  #contenido{
    background:#fff;
    margin:20px auto;
    overflow:hidden;
    padding:40px ;
    border:1px solid #2E9AFE;
    width:90%;
    -webkit-border-radius: 10px;
    -moz-border-radius: 10px;
    border-radius: 10px;
  }

  body{
    background: #CCCCCC;
  }
</style>
<DIV ID="contenido">
<%= form_for(auto) do |f| %>
  <% if auto.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(auto.errors.count, "error") %> prohibited this auto from being saved:</h2>

      <ul>
      <% auto.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :marca %><BR>
    <%= f.text_field :marca %>
  </div>

  <div class="field">
    <%= f.label :modelo %><BR>
    <%= f.text_field :modelo %>
  </div>

  <div class="field">
    <%= f.label :anio %><BR>
    <%= f.number_field :anio %>
  </div>

  <div class="field">
    <%= f.label :precio %><BR>
    <%= f.text_field :precio %>
  </div>

  <div class="field">
    <%= f.label :fecha_adquisicion %><BR>
    <%= f.date_select :fecha_adquisicion %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
    <BR>
<% end %>
</DIV>